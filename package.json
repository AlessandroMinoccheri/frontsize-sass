{
  "name": "frontsize",
  "version": "4.0.3",
  "description": "A fully customizable CSS generator to ease your life.",
  "authors": [
    {
      "name": "Alessandro Minoccheri",
      "email": "alessandro.minoccheri@gmail.com"
    },
    {
      "name": "Carla Soloperto",
      "email": "cs@ideato.it"
    },
    {
      "name": "Moreno Giorgini",
      "email": "mg@ideato.it"
    },
